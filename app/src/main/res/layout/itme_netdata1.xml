<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    android:background="@color/bg_fff"
    android:orientation="vertical"
    android:padding="5dp">

   >

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center|left"
            android:maxLines="2"
            android:text="asdasdasdasdasdasdasdasdasdasdasdasd"
            android:textColor="@color/font_title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="@dimen/text_size_20sp"></TextView>


    <androidx.cardview.widget.CardView
        app:cardElevation="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title">

        <TextView
            android:id="@+id/filesize_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/sos_btn_text"
            android:gravity="center"
            android:padding="5dp"
            android:textSize="@dimen/text_size_14sp" />
    </androidx.cardview.widget.CardView>



    <androidx.cardview.widget.CardView
        app:cardElevation="12dp"
        android:layout_width="wrap_content"
        android:elevation="10dp"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/dwon_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_select"
            android:gravity="center"
            android:padding="5dp"
            android:text="下载"
            android:textColor="@color/font_fff"
            android:textSize="@dimen/text_size_14sp"
          />

    </androidx.cardview.widget.CardView>



    </androidx.constraintlayout.widget.ConstraintLayout>

 