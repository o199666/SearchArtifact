<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<ImageView
    android:id="@+id/top_iv"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:layout_width="match_parent"
    android:scaleType="fitXY"
    app:layout_constraintVertical_bias="0.5"
    android:src="@drawable/top_bg"
    android:layout_height="200dp" />

    <EditText
        android:id="@+id/input_et"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintWidth_percent="0.68"
        android:layout_margin="5dp"
        android:paddingLeft="10dp"
        android:background="@drawable/sos_border"
        android:gravity="center|left"
        android:hint="请输入关键字 "
        android:maxLength="30"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@color/bg_fff"
        android:textColorHint="@color/font_hint_fff"
        app:layout_constraintBottom_toBottomOf="@id/top_iv"
        app:layout_constraintHorizontal_weight="7"
        app:layout_constraintLeft_toLeftOf="@id/top_iv"
        app:layout_constraintStart_toStartOf="@id/top_iv"
        app:layout_constraintTop_toTopOf="@id/top_iv" />
    <Button
        app:layout_constraintWidth_percent="0.28"
        android:id="@+id/search_btn"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="搜索"
        android:textColor="@color/font_fff"
        android:gravity="center"
        android:background="@drawable/sos_btn_text"
        app:layout_constraintEnd_toEndOf="@id/top_iv"
        app:layout_constraintBottom_toBottomOf="@id/top_iv"
        app:layout_constraintLeft_toRightOf="@id/input_et"
        app:layout_constraintRight_toRightOf="@id/top_iv"
        app:layout_constraintTop_toTopOf="@id/top_iv" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recy_list2"
        app:layout_constraintTop_toBottomOf="@id/top_iv"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    </androidx.recyclerview.widget.RecyclerView>
</androidx.constraintlayout.widget.ConstraintLayout>